generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id                        String   @id @default(auto()) @map("_id") @db.ObjectId
  role                      String?  @default("STUDENT") @db.String
  username                  String   @unique
  email                     String   @unique
  password                  String
  name                      String?
  lessons                   Lesson[]
  // sessions                  Session[]
  tutorName                 String
  knowledgePointsUnderstood String[]

  @@map("users")
}


model UIDetail {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  tips Tip[]

  @@map("uidetails")
}

model Tip {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  content    String
  link       String
  uiDetail   UIDetail @relation(fields: [uiDetailId], references: [id])
  uiDetailId String   @db.ObjectId

  @@map("tips")
}

model Lesson {
  id                      String    @id @default(auto()) @map("_id") @db.ObjectId
  subject                 String
  messages                Message[]
  beganAt                 DateTime  @default(now())
  updatedAt               DateTime  @default(now())
  user                    User      @relation(fields: [userId], references: [id])
  userId                  String    @db.ObjectId
  currentKnowledgeSummary String

  @@map("lessons")
}

model Message {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  role     String
  content  String
  //relation field below
  lesson   Lesson @relation(fields: [lessonId], references: [id])
  lessonId String @db.ObjectId

  @@map("messages")
}
